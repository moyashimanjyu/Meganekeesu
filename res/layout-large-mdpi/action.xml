<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="4dp" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/closeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="close"
            android:text="閉" />
        <Button
            android:id="@+id/replyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="reply"
            android:text="＠" />
        <Button
            android:id="@+id/retweetButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="retweet"
            android:text="公" />
        <Button
            android:id="@+id/favoriteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="favorite"
            android:text="☆" />
        <Button
            android:id="@+id/qtButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="qt"
            android:text="引" />
        <Button
            android:id="@+id/historyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="history"
            android:text="歴" />
        <Button
            android:id="@+id/leadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="lead"
            android:text="…" />
        <Button
            android:id="@+id/aaaButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="aaa"
            android:text="ア" />
        <Button
            android:id="@+id/pluginButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="plugin"
            android:text="プ" />
        <Button
            android:id="@+id/translateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="translate"
            android:text="訳" />
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="delete"
            android:text="削" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/extendActions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >
        <Button
            android:id="@+id/extendButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:tag="extend"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>